{
  "name": "ts-template",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "setup": "npm install --save-dev @tsconfig/node23 ts-loader typescript webpack webpack-cli webpack-dev-server webpack-merge html-webpack-plugin html-loader css-loader style-loader eslint @eslint/js typescript-eslint prettier eslint-config-prettier eslint-plugin-prettier eslint-plugin-html stylelint",
    "start": "webpack serve --open --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "format:check": "prettier --ignore-path .gitignore --check \"**/*.+(js|ts|json)\""
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@tsconfig/node23": "^23.0.1",
    "css-loader": "^6.11.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.3",
    "eslint-plugin-html": "^8.1.2",
    "eslint-plugin-prettier": "^5.4.0",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.3",
    "prettier": "^3.5.3",
    "style-loader": "^3.3.4",
    "stylelint": "^16.19.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "webpack": "^5.99.8",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.2",
    "webpack-merge": "^5.10.0"
  }
}
