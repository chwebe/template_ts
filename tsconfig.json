{
  "extends": "@tsconfig/node23/tsconfig.json",
  "compilerOptions": {
    "target": "ES2024",
    "module": "ESNext",
    "lib": ["DOM", "ES2024"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./", // Required for path aliases
    "preserveConstEnums": true,
    "sourceMap": true, // ðŸ‘ˆ Useful for debugging in browser devtools
    "strict": true, // ðŸ‘ˆ Ensures better type safety
    "esModuleInterop": true,
    "allowJs": false, // ðŸ‘ˆ Block plain JS to enforce TS-only
    "resolveJsonModule": true, // ðŸ‘ˆ Allow importing .json files
    "forceConsistentCasingInFileNames": true, // ðŸ‘ˆ Prevents issues across OSs
    "noImplicitAny": true, // ðŸ‘ˆ Catch undeclared types early
    "skipLibCheck": true, // ðŸ‘ˆ Speeds up compile by skipping node_modules
    "paths": {
      "@utils/*": ["./src/utils/*"], // ðŸ‘ˆ Example path alias
      "@components/*": ["./src/components/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
